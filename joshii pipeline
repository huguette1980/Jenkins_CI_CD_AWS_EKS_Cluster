node {

    stage("Git Clone"){

        git credentialsId: 'GIT_HUB_CREDENTIALS', url: 'https://github.com/huguette1980/k8s-jenkins-aws'
    }

     stage('Gradle Build') {

       sh './gradlew build'

    }

    stage("Docker build"){
        sh 'docker version'
        sh 'docker build -t huguette/sim .'
        sh 'docker image list'
        sh 'docker tag huguette/sim huguette1980/huguette/sim:huguette/sim'
    }

    withCredentials([string(credentialsId: 'DOCKER_HUB_PASSWORD', variable: 'PASSWORD')]) {
        sh 'docker login -u huguette1980 -p $PASSWORD'
    }

    stage("Push Image to Docker Hub"){
        sh 'docker push huguette1980/huguette/sim:huguette/sim'
    }
    
    stage("kubernetes deployment"){
        sh 'kubectl create -f k8s-spring-boot-deployment.yml'
    }
} 
